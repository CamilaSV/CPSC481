<UserControl x:Class="CPSC481Group12FoodyApp.RestaurantListCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPSC481Group12FoodyApp" 
             mc:Ignorable="d" 
             
             Background="#8D6A9F"
             BorderBrush="White" BorderThickness="2"
             Height="140"
             
             d:DesignHeight="155" d:DesignWidth="480">

    <Grid MouseDown="Grid_MouseDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>

        <Border MouseDown="Grid_MouseDown" Grid.Column="2" VerticalAlignment="Center" Padding="10">
            <StackPanel>
                <DockPanel>
                    <TextBlock x:Name="RestaurantName"  Text="Taco Bell"  MouseDown="Grid_MouseDown"  FontSize="35" FontWeight="Bold" Width="235" TextTrimming="CharacterEllipsis"/>
                    <Button Click="Delete_Restaurant_Click" DockPanel.Dock="Right" Content="Vote" FontWeight="UltraBold" FontSize="35" Background="LimeGreen" Width="125" />
                    <Button Click="Vote_Click" Margin="0,0,25,0" DockPanel.Dock="Right" Content="&#x1F5D1;" FontWeight="UltraBold" FontSize="35" HorizontalAlignment="Right" Background="Red" Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"  />
                </DockPanel>
                <StackPanel>
                    <DockPanel Margin="0,5,0,15">
                        <TextBlock Text="Vegeterian Veegan"  MouseDown="Grid_MouseDown" DockPanel.Dock="Left" FontFamily="Segoe UI Semibold" FontSize="25" TextTrimming="CharacterEllipsis" Width="144" HorizontalAlignment="Left"/>

                        <TextBlock Text="Votes: 4/5" MouseDown="Grid_MouseDown" DockPanel.Dock="Right" FontWeight="Black" FontSize="25" Foreground="LimeGreen" TextTrimming="CharacterEllipsis" HorizontalAlignment="Right" MaxWidth="150"/>
                    </DockPanel>
                    <DockPanel>
                        <TextBlock  MouseDown="Grid_MouseDown" Foreground="#7FA9A9A9" HorizontalAlignment="Right" FontWeight="Regular" FontSize="25" TextTrimming="CharacterEllipsis" Width="222" FontStyle="Italic"><Run Language="en-ca" Text="Click to show more..."/></TextBlock>
                    </DockPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
