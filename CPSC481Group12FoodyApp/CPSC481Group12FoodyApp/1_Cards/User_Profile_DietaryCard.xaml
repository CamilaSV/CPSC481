<UserControl x:Class="CPSC481Group12FoodyApp.DietaryCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPSC481Group12FoodyApp" 
             mc:Ignorable="d" 
             
             d:DesignHeight="30" d:DesignWidth="200">

    <Grid>
        <CheckBox Content="{Binding CriterionName}" IsChecked="{Binding CriterionChecked}" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" FontSize="20" />
        <TextBlock x:Name="CriterionIdText" Text="{Binding CriterionId}" Visibility="Hidden" Width="0" Height="0" />
    </Grid>
</UserControl>
