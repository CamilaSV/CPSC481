<UserControl x:Class="CPSC481Group12FoodyApp.UserControl_Start"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPSC481Group12FoodyApp"
             mc:Ignorable="d" 
             d:DesignHeight="853" d:DesignWidth="480">
    <Grid Background="White">
        <Button x:Name="SignUpButton" Content="Sign Up" HorizontalAlignment="Center" Margin="0,570,0,0" VerticalAlignment="Top" FontSize="34" Click="SignUpButton_Click" Height="80" Width="200"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Center" Margin="0,473,0,0" VerticalAlignment="Top" FontSize="34" Click="LoginButton_Click" Height="80" Width="200"/>
        <Label x:Name="AppNameTitle" Content="Food App" HorizontalAlignment="Center" Margin="0,175,0,0" VerticalAlignment="Top" FontSize="64"/>
        <Image x:Name="AppLogo" HorizontalAlignment="Left" Height="100" Margin="180,275,0,0" VerticalAlignment="Top" Width="100" Source="Images/AppIcon.png"/>
    </Grid>
</UserControl>
