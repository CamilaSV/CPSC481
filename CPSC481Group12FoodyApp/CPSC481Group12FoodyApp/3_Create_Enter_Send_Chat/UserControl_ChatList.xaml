<UserControl x:Class="CPSC481Group12FoodyApp.UserControl_ChatList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPSC481Group12FoodyApp"
             mc:Ignorable="d" 
             d:DesignHeight="853" d:DesignWidth="480">
    <Grid>

        <Border Padding="0,125,0,110">
            <Grid DataContext="{x:Static local:ChatListControlDesignModel.Instance}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ListControl" ItemsSource="{Binding Chats}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <local:ChatListGroupControl >
                                </local:ChatListGroupControl>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <Border Height="1" Margin="2,752,2,100" Background="#000000"/>
        <Border Width="1" Margin="320,752,159,0" Background="#000000"/>
        <Border Width="1" Margin="160,752,319,0" Background="#000000"/>
        <Button x:Name="List_HomeButton" Content="Home" HorizontalAlignment="Left" Height="52" Margin="40,776,0,0" VerticalAlignment="Top" Width="76" FontFamily="Times New Roman" FontSize="16" Click="List_HomeButton_Click"/>
        <Button x:Name="List_CalButton" Content="Calendar" HorizontalAlignment="Center" Height="52" Margin="0,776,0,0" VerticalAlignment="Top" Width="76" FontFamily="Times New Roman" FontSize="16" RenderTransformOrigin="0.562,-0.107" Click="List_CalButton_Click"/>
        <Button x:Name="List_ChatButton" Content="Chats" HorizontalAlignment="Right" Height="52" Margin="0,776,43,0" VerticalAlignment="Top" Width="76" FontFamily="Times New Roman" FontSize="16" RenderTransformOrigin="0.419,0.027" Click="List_ChatButton_Click"/>
        <Button x:Name="List_CreateGroup" Content="+" HorizontalAlignment="Left" Height="54" Margin="378,656,0,0" VerticalAlignment="Top" Width="59" RenderTransformOrigin="1.116,0.367" FontFamily="Times New Roman" FontSize="16" Click="List_CreateGroup_Click"/>
        <Button x:Name="List_Profile" Content="👤" HorizontalAlignment="Left" Height="38" Margin="408,10,0,0" VerticalAlignment="Top" Width="38" RenderTransformOrigin="1.116,0.367" FontFamily="Times New Roman" FontSize="30" Click="List_Profile_Click"/>
        <Button x:Name="List_Invitation" Background="LightPink" BorderBrush="red" BorderThickness="2"  Content="Chat Requests" HorizontalAlignment="Left" Height="40" Margin="10,69,0,0" VerticalAlignment="Top" Width="94" RenderTransformOrigin="1.116,0.367" FontFamily="Times New Roman" FontWeight="Bold" FontSize="14" Click="List_Invitation_Click"  />
        <TextBox Margin="125,69,10,744" Text="Search" FontSize="24" />
    </Grid>
</UserControl>
