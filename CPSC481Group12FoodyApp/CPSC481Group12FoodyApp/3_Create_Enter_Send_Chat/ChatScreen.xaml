<UserControl x:Class="CPSC481Group12FoodyApp.ChatScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPSC481Group12FoodyApp" xmlns:chat="clr-namespace:CPSC481Group12FoodyApp._3_Create_Enter_Send_Chat.chat"
             mc:Ignorable="d" 
             d:DesignHeight="853" d:DesignWidth="480">

    <UserControl.DataContext>
        <chat:ChatBoxControlDesignModel/>
    </UserControl.DataContext>

    <Grid>
        <Border Padding="0,75,0,0">
            <ListView ItemsSource="{Binding Messages}" 
                      ItemContainerStyle="{StaticResource ChatMsgsShow}"/>
        </Border>

        <TextBlock x:Name="BackButton" HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" TextWrapping="Wrap" Text="&#x21a9;" VerticalAlignment="Top" Width="40" FontFamily="Times New Roman" FontSize="40" RenderTransformOrigin="0.248,0.149" MouseUp="BackButton_MouseUp"/>
        <Button x:Name="ChatInfoButton" HorizontalAlignment="Left" Height="64" Width="64" VerticalAlignment="Top" BorderBrush="{x:Null}" Margin="406,1,0,0" Click="ChatInfoButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Images/InfoIcon.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:Name="GroupNameBlock" HorizontalAlignment="Center" Height="40" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="315" FontFamily="Times New Roman" FontSize="40" RenderTransformOrigin="0.248,0.149"/>
        <TextBlock x:Name="GroupIdBlock" HorizontalAlignment="Left" Height="40" Margin="64,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="27" FontFamily="Times New Roman" FontSize="40" RenderTransformOrigin="0.248,0.149" Visibility="Hidden">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
    </Grid>
</UserControl>
