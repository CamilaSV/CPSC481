<UserControl x:Class="CPSC481Group12FoodyApp.ChatListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPSC481Group12FoodyApp" 
             mc:Ignorable="d" 
             Background="White"
             
             d:DesignHeight="890" d:DesignWidth="492">
    <!--DataContext="{Binding RelativeSource={RelativeSource Self}}"-->

    <Grid DataContext="{x:Static local:ChatListControlDesignModel.Instance}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ListControl" ItemsSource="{Binding Chats}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:ChatListGroupControl>
                        </local:ChatListGroupControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
